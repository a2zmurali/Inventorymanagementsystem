
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout - login.cshtml";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<style type="text/css">
    body {
    font-family: "Lato", sans-serif;
}



.main-head{
    height: 150px;
    background: #FFF;
   
}

.sidenav {
    height: 100%;
    background-color: #000;
    overflow-x: hidden;
    padding-top: 20px;
}


.main {
    padding: 0px 10px;
}

@@media screen and (max-height: 450px) {
    .sidenav {padding-top: 15px;}
}

@@media screen and (max-width: 450px) {
    .login-form{
        margin-top: 10%;
    }

    .register-form{
        margin-top: 10%;
    }
}

@@media screen and (min-width: 768px){
    .main{
        margin-left: 40%; 
    }

    .sidenav{
        width: 40%;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
    }

    .login-form{
        margin-top: 80%;
    }

    .register-form{
        margin-top: 20%;
    }
}


.login-main-text{
    margin-top: 20%;
    padding: 60px;
    color: #fff;
}

.login-main-text h2{
    font-weight: 300;
}

.btn-black{
    background-color: #000 !important;
    color: #fff;
}
</style>

<div class="sidenav" style="
    background-image: url('https://t4.ftcdn.net/jpg/04/60/71/01/360_F_460710131_YkD6NsivdyYsHupNvO3Y8MPEwxTAhORh.jpg');
    -webkit-filter: brightness(0.8);
    filter: brightness(0.8);
">
    <div class="login-main-text">
        <h1>Inventory management system </h1>
       
    </div>
</div>
@Html.Hidden("RedirectTo", Url.Action("Index", "Products"));
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form style="    margin-top: -50%;">
                <h1> Login </h1>
                <p>Enter "root" as UserName & Password to continue.</p>
                <br>
                <div class="form-group">
                    <label>UserName</label>
                    <input type="text" class="form-control" placeholder="User Name" id="txtname">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="Password" id="txtpassword">
                </div>               
              
                <button type="button" class="btn btn-black" id="btnlogin">Login</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {


<script type="text/javascript">
    $(document).ready(function () {
          $('#btnlogin').click(function () {

                if (!($('#txtname').val() && $('#txtpassword').val()))
                {
                    alert("Please enter credentials ");
                }
            else {                    
                    alert("login successful");
                    var url = $("#RedirectTo").val();
                      location.href = url;
                 }
         });
    });

</script>
}